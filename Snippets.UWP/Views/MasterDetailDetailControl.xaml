<UserControl
    x:Class="Snippets.UWP.Views.MasterDetailDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <ScrollViewer
        Name="ForegroundElement"
        VerticalScrollMode="Enabled"
        HorizontalAlignment="Stretch"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Padding="0,6">
        <Grid Padding="64,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnBack"
                        Grid.Column="0"
                        Margin="-64,0,12,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Style="{ThemeResource NavigationBackButtonNormalStyle}" />
                <TextBox Grid.Column="1"
                         Text="{x:Bind MasterMenuItem.Title, Mode=TwoWay}"
                         Style="{ThemeResource TransparentStyle}"
                         FontSize="46"
                         FontWeight="SemiBold"
                         AcceptsReturn="False"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         Padding="0"
                         Margin="0"
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Last Modified -->
            <Grid Grid.Row="1"
                  BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                  BorderThickness="0,0,0,2">
                <TextBlock Text="{x:Bind MasterMenuItem.LastModifiedOn, Mode=OneWay}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,12" />
            </Grid>

            <!-- Details -->
            <Grid Grid.Row="2">
                <TextBox Text="{x:Bind MasterMenuItem.Details, Mode=TwoWay}"
                         Style="{ThemeResource TransparentStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Margin="0"
                         Padding="0,12"
                         BorderThickness="0"
                         />
            </Grid>

            
        </Grid>





        
